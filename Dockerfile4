FROM x3
USER user
WORKINGDIR /grapheneos-14

# curl https://grapheneos.org/allowed_signers > grapheneos_allowed_signers
COPY ./grapheneos_allowed_signers /tmp/
RUN cd .repo/manifests && git -C gpg.ssh.allowedSignersFile=/tmp/grapheneos_allowed_signers verify-tag $(git describe)

RUN yarn install --cwd vendor/adevtool/
RUN source build/envsetup.sh && m aapt2 && adevtool generate-all -d bluejay

